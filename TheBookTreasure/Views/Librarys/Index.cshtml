@model IEnumerable<TheBookTreasure.Models.Library>

@{
	ViewData["Title"] = "Index";
}

<h1>רשימת ספריות</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">יצירת ספריה</a>
</p>
<table class="table">
	<thead>
		<tr>			
			<th>
				@Html.DisplayNameFor(model => model.LibraryName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Genre)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>			
				<td>
					@Html.DisplayFor(modelItem => item.LibraryName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Genre)
				</td>
				<td >
					<a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id })">פרטי הספריה</a>
				</td>
			</tr>
		}
	</tbody>
</table>
